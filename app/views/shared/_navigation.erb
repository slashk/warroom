<div id="asshead" class="ui-widget-header off-the-clock">
  <table width="100%">
    <tr>
      <td>
        <img src="/images/assy.gif" width=30 height=30 alt="ASS Logo" id="assy">
		<span class="nav-title"><strong>War</strong>Room</span>
      </td>
      <td style="text-align:left;">
        <div id="update_cell"></div>
      </td>
      <td style="text-align:right;padding-right:1em;">
        <% if logged_in? %>
          <%#= "Welcome #{current_user.login} [#{current_user.role}] !" %>
          <div class="ui-buttonset">
          	<span class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" role="button">
              <%= link_to "Players", {:controller => "players"}, :class => "ui-button-text" %>
            </span>
            <% unless draft_started? %>
              <span class='ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only'  role="button">
                      <%= link_to "Retainees", {:controller => 'retainees'}, :class => "ui-button-text"  %>
              </span>
            <% end %>
            <span class='ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only' role="button">
              <span class="ui-button-text"><%= link_to "Picks", :controller => "picks" %></span>
            </span>
            <% if is_admin? then -%>
              <span class='ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only' role="button">          
                <%= link_to "Entry", {:controller => "entry"}, :class => "ui-button-text"   %>
              </span>
              <span class='ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only' role="button">          
                <%= link_to "Users", {:controller => "users"}, :class => "ui-button-text" %>
              </span>
              <span class='ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only' role="button">          
                <%= link_to "Admin", {:controller => "admin"}, :class => "ui-button-text" %>
              </span>
              <% end %>
              <span class='ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only' role="button">
                <%= link_to "Logout", {:controller=>'session', :action => 'destroy', :id => current_user}, :class => "ui-button-text"  %>
              </span>
            </div>
        <% end %>
      </td>
    </tr>
  </table>
</div>