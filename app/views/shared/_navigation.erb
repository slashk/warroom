<div id="asshead" class="ui-widget-header off-the-clock">
  <table width="100%">
    <tr>
      <td>
        <img src="/images/assy.gif" width=30 height=30 alt="ASS Logo" id="assy">
		<span class="nav-title"><strong>War</strong>Room</span>
      </td>
      <td style="text-align:left;">
        <div id="update_cell"></div>
      </td>
      <td style="text-align:right;padding-right:1em;">
        <% if logged_in? %>
          <%= "Welcome #{current_user.login} [#{current_user.role}] !" %>
          [<%= link_to "logout", :controller=>'session', :action => 'destroy', :id => current_user %>]<br />
          <%= link_to "Players", :controller => "players" %>
          <%= link_to_unless draft_started?, "Retainees", :controller => 'retainees' %>
          <%= link_to "Picks", :controller => "picks" %>
          <% if is_admin? then -%>
            <%= link_to "Entry", :controller => "entry"  %>
            <%= link_to "Users", :controller => "users" %>
            <%= link_to "Admin", :controller => "admin" %>
          <% end %>
        <% end %>
      </td>
    </tr>
  </table>
</div>