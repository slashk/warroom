<h1>All Retainees</h1>
<div style="padding:1em;">
	<table width="100%" cellpadding=0 cellspacing=0 id="retaineesTable">
	<thead>
	  <tr>
	    <th>Franchise</th>
	    <th>Player</th>
	    <th align="center">Pos</th>		
		<th align="center">Team</th>
	  </tr>
	</thead>
	<tbody>
	<% unless @retainees.empty? %>
		<% for retainee in @retainees %>
		  <tr>
		    <td><%=h retainee.user.team %></td>
		    <td><%=h retainee.player.player %></td>
			<td align="center"><%= retainee.player.pos %></td>
		    <td align="center"><%=h retainee.player.team %></td>
		  </tr>
		<% end %>
	<% end %>
	</tbody>
</table>
</div>
<br />

<h3 class="fg-warroom-button ui-state-default ui-priority-secondary ui-corner-all" style="margin-top:5px;"><%= link_to 'Set Your Retainees', :action => 'edit', :id => current_user %></h3>	
