<h2>Overall Pick #<%= @pick.pick_number -%> </h2>
<% form_for(:pick, :url => {:action => 'update'}) do |p| %>
  <p><strong>Player</strong>: <%= p.text_field :player_id , :size => 5 -%></p>
  <p><strong>Team</strong>: <%= p.collection_select(:user_id, @teams, :id, :team) %></p>
  <p><strong>Pick Number</strong>: <%= p.text_field :pick_number, :size => 5 -%></p>
  <%= submit_tag "Draft" %>
<% end %>

<div id="draftee"></div>

<%=
observe_field('pick_player_id', :url => {:controller => 'players', :action => 'show'},
:update => 'draftee', :with => "'id=' + value")
%>